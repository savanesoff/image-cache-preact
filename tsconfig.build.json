{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ES6",
    "outDir": "./dist",
    "declarationDir": "./dist/types",
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "allowImportingTsExtensions": false
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "dist-demo",
    "demo",
    "./src/**/*.spec.*",
    "./demo/**/*.spec.*",
    "./src/__mocks__"
  ]
}
