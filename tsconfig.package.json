{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": ["esnext", "dom", "dom.iterable"],
    "target": "es2018",
    "module": "esnext",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "bundler",
    "noEmit": false,
    "outDir": "./dist/types",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@lib/*": ["src/lib/*"],
      "@utils": ["src/utils"]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "dist-demo",
    "demo",
    "**/*.spec.*",
    "src/__mocks__"
  ]
}
