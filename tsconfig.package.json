{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": ["esnext", "dom", "dom.iterable"],
    "target": "es2018",
    "module": "esnext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "noEmit": false,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@lib/*": ["src/lib/*"],
      "@utils": ["src/utils"]
    },
    "downlevelIteration": true
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "dist-demo",
    "demo",
    "**/*.spec.*",
    "src/__mocks__"
  ]
}
